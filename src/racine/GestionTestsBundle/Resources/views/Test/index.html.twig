<h1>Test list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Duree</th>
            <th>Nbr_questions</th>
            <th>Duree_max_question</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('Test_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.Nom }}</td>
            <td>{{ entity.Duree }}</td>
            <td>{{ entity.Nbrquestions }}</td>
            <td>{{ entity.Dureemaxquestion }}</td>
            <td>{{ entity.Description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('Test_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('Test_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('Test_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
